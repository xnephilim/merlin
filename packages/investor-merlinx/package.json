{
  "name": "@xblackfury/investor-merlinx",
  "version": "8.0.1",
  "description": "An API layer for interaction with the ShapeShift MERLINy contract",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "lib": "dist",
    "src": "src"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14.18.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rm -rf dist && rm -rf tsconfig.build.tsbuildinfo",
    "compile": "tsc -p tsconfig.build.json",
    "dev": "tsc --watch",
    "prepare": "yarn build",
    "test": "jest --coverage",
    "cli": "yarn build && node ./dist/merlinxcli.js"
  },
  "dependencies": {
    "@ethersproject/providers": "^5.5.3",
    "axios": "^0.26.1",
    "bignumber.js": "^9.1.1",
    "lodash": "^4.17.21",
    "web3": "1.7.4",
    "web3-core": "1.7.4",
    "web3-utils": "1.7.4"
  },
  "peerDependencies": {
    "@xblackfury/caip": "^8.0.0",
    "@xblackfury/chain-adapters": "^11.0.0",
    "@xblackfury/hdwallet-core": "^1.46.0",
    "@xblackfury/types": "^8.1.0"
  },
  "devDependencies": {
    "@xblackfury/caip": "^8.0.0",
    "@xblackfury/chain-adapters": "^11.0.0",
    "@xblackfury/hdwallet-core": "^1.46.0",
    "@xblackfury/types": "^8.1.0",
    "@xblackfury/hightable-client": "^10.0.1"
  }
}
